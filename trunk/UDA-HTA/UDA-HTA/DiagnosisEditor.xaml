<Window x:Class="UDA_HTA.DiagnosisEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:UDA_HTA.UserControls.RichTextBox"
        WindowStartupLocation="CenterOwner" Height="400" Width="400"
        Title="Informe médico" MinHeight="200" MinWidth="400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ctrl:RichTextEditor Grid.Row="0" VerticalAlignment="Stretch" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,30,5" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Name="btnAccept" Width="100" Margin="0,0,20,0" Click="btnAccept_Click">Aceptar</Button>
            <Button Name="btnCancel" Width="100" IsCancel="True">Cancelar</Button>
        </StackPanel>
    </Grid>
</Window>
