<Window x:Class="UDA_HTA.ReportCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:UDA_HTA.UserControls"
        Title="ReportCreate" SizeToContent="WidthAndHeight" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <ContentControl Name="CurrentControl" Grid.Row="0">
            <UserControls:AdmissionForm />
        </ContentControl>

        <StackPanel Orientation="Horizontal" Name="Buttons" HorizontalAlignment="Right" 
                    Margin="0,10,30,5" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Name="btnBack" Width="100" IsEnabled="False">&lt; Volver</Button>
            <Button Name="btnNext" Width="100" Margin="4,0,20,0" Click="btnNext_Click">Siguiente &gt;</Button>
            <Button Name="btnCancel" Width="100" IsCancel="True">Cancelar</Button>
        </StackPanel>


    </Grid>
</Window>
