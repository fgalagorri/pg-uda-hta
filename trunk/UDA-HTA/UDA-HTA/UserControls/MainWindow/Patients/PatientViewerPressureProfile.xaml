<UserControl x:Class="UDA_HTA.UserControls.MainWindow.Patients.PatientViewerPressureProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ChartTitle" TargetType="DV:Title">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="DVC:Chart">
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        <Style x:Key="ChartStyle" TargetType="{x:Type DVC:Chart}">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="LegendStyle">
                <Setter.Value>
                    <Style TargetType="DV:Legend">
                        <Setter Property="Template" Value="{x:Null}" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="PlotAreaStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="ShowGridLines" Value="True" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <DockPanel>
            <DVC:Chart Name="PressureProfile" Title="Perfil de Presión Arterial" 
                       Style="{StaticResource ChartStyle}" TitleStyle="{StaticResource ChartTitle}" >
                <DVC:Chart.Series>
                    <!-- SYSTOLIC SERIES -->
                    <DVC:LineSeries Title="Systolic" IndependentValuePath="Key" DependentValuePath="Value">
                        <DVC:LineSeries.DataPointStyle>
                            <Style TargetType="DVC:DataPoint">
                                <Setter Property="Background" Value="DeepPink" />
                            </Style>
                        </DVC:LineSeries.DataPointStyle>
                    </DVC:LineSeries>

                    <!-- Middle SERIES -->
                    <DVC:LineSeries Title="Middle" IndependentValuePath="Key" DependentValuePath="Value">
                        <DVC:LineSeries.DataPointStyle>
                            <Style TargetType="DVC:DataPoint">
                                <Setter Property="Background" Value="DarkViolet" />
                            </Style>
                        </DVC:LineSeries.DataPointStyle>
                    </DVC:LineSeries>

                    <!-- DIASTOLIC SERIES -->
                    <DVC:LineSeries Title="Diastolic" IndependentValuePath="Key" DependentValuePath="Value">
                        <DVC:LineSeries.DataPointStyle>
                            <Style TargetType="DVC:DataPoint">
                                <Setter Property="Background" Value="Blue" />
                            </Style>
                        </DVC:LineSeries.DataPointStyle>
                    </DVC:LineSeries>

                    <!-- HEART RATE SERIES -->
                    <DVC:LineSeries Title="HR" IndependentValuePath="Key" DependentValuePath="Value">
                        <DVC:LineSeries.DependentRangeAxis>
                            <DVC:LinearAxis Location="Right" Orientation="Y" Minimum="50" Maximum="250" 
                                            Interval="10" Title="Frecuencia Cardíaca (1/m)" 
                                            Foreground="Red" />
                        </DVC:LineSeries.DependentRangeAxis>
                        <DVC:LineSeries.DataPointStyle>
                            <Style TargetType="DVC:DataPoint">
                                <Setter Property="Background" Value="Red" />
                            </Style>
                        </DVC:LineSeries.DataPointStyle>
                    </DVC:LineSeries>
                </DVC:Chart.Series>
                
                <DVC:Chart.Axes>
                    <DVC:LinearAxis Orientation="Y" Minimum="0" Maximum="200" Interval="10" 
                                    ShowGridLines="True" Title="Presión arterial (mmHg)" />
                </DVC:Chart.Axes>
            </DVC:Chart>
        </DockPanel>
    </Grid>
</UserControl>
