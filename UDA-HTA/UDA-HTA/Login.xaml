<Window x:Class="UDA_HTA.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen" Title="Login" Height="200" Width="323">
    <Grid>
        <Label Content="Usuario" Height="28" HorizontalAlignment="Left" Margin="15,60,0,0" Name="labelUser" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="15,90,0,0" Name="labelPassword" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="90,60,0,0" Name="userLogin" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="90,90,0,0" Name="userPassword" VerticalAlignment="Top" Width="120" />
        <Button Content="Ingresar" Height="23" HorizontalAlignment="Left" Margin="214,126,0,0" Name="buttonLogin" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click" />
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="15,24,0,0" Name="lblError" VerticalAlignment="Top" Foreground="Red"/>
    </Grid>
</Window>
