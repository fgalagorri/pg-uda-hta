<Window x:Class="UDA_HTA.UserControls.MainWindow.Patients.NewPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Paciente" WindowStartupLocation="CenterScreen" Width="745" Height="560">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <ContentControl Name="CurrentControl" Grid.Row="0" Content="{Binding ControlContent}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,30,5" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Name="btnNext" Width="100" Margin="4,0,20,0" Click="btnNext_Click">Siguiente</Button>
            <Button Name="btnAdd" IsEnabled="False" Width="100" Margin="4,0,20,0" Click="btnAdd_Click">Crear Paciente</Button>
        </StackPanel>
    </Grid>
</Window>
