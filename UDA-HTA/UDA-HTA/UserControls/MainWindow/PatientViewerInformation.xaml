<UserControl x:Class="UDA_HTA.UserControls.MainWindow.PatientViewerInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="LightGray" />
        </Style>
        <Style TargetType="RowDefinition">
            <Setter Property="MinHeight" Value="26" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        
            
            <!-- Datos de identificación -->
            <GroupBox Grid.Row="0">
                <GroupBox.Header>
                    <TextBlock Style="{StaticResource groupTitle}">Identificación</TextBlock>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBlock Style="{StaticResource label}">Nombres:</TextBlock>
                        <TextBlock Name="lblNames" Margin="15,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <TextBlock Style="{StaticResource label}">Apellidos:</TextBlock>
                        <TextBlock Name="lblLast" Margin="15,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <TextBlock Style="{StaticResource label}">CI:</TextBlock>
                        <TextBlock Name="lblCI" Margin="15,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3">
                        <TextBlock Style="{StaticResource label}">Fecha de Nacimiento:</TextBlock>
                        <TextBlock Name="lblBirth" Margin="15,0" />
                        <TextBlock>(</TextBlock> 
                        <TextBlock Name="lblAge" />
                        <TextBlock Margin="4,0,0,0"> años)</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="4">
                        <TextBlock Style="{StaticResource label}">Sexo:</TextBlock>
                        <TextBlock Name="lblSex" Margin="15,0" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Datos del estado del paciente -->
            <GroupBox Grid.Row="1">
                <GroupBox.Header>
                    <TextBlock Style="{StaticResource groupTitle}">Condición</TextBlock>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">Peso (Kg):</TextBlock>
                        <TextBlock Name="lblWeight" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Altura (m):</TextBlock>
                        <TextBlock Name="lblHeight" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">IMC:</TextBlock>
                        <TextBlock Name="lblImc" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">%Grasa:</TextBlock>
                        <TextBlock Name="lblFat" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">%Músculo:</TextBlock>
                        <TextBlock Name="lblMuscle" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2">
                        <Border />
                        <TextBlock  Margin="15,0" Style="{StaticResource label}">KCal:</TextBlock>
                        <TextBlock Name="lblKcal" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">Fumador:</TextBlock>
                        <TextBlock Name="lblSmoker" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Diabetes:</TextBlock>
                        <TextBlock Name="lblDiabetes" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Dislipemia:</TextBlock>
                        <TextBlock Name="lblColesterol" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="3">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Hipertenso:</TextBlock>
                        <TextBlock Name="lblHypertense" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Medicación -->
            <GroupBox Grid.Row="2">
                <GroupBox.Header>
                    <TextBlock Style="{StaticResource groupTitle}">Medicación</TextBlock>
                </GroupBox.Header>
                <DataGrid Name="grMedication" Background="White" AutoGenerateColumns="False" 
                          ItemsSource="{Binding}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Categoría" Width="1*" IsReadOnly="True" 
                                            Binding="{Binding Path=Categoria}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Nombre comercial" Width="2*" IsReadOnly="True" 
                                            Binding="{Binding Path=Nombre}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Principio activo" Width="2*" IsReadOnly="True" 
                                            Binding="{Binding Path=Principio}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Dosificación" Width="2*" IsReadOnly="True" 
                                            Binding="{Binding Path=Dosis}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Antecedentes médicos-->
            <GroupBox Grid.Row="3">
                <GroupBox.Header>
                    <TextBlock Style="{StaticResource groupTitle}">Antecedentes médicos</TextBlock>
                </GroupBox.Header>
                <DataGrid Name="grBackground" Background="White" AutoGenerateColumns="False"
                            ItemsSource="{Binding}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Enfermedad" Width="1*" IsReadOnly="True"
                                            Binding="{Binding Path=Enfermedad}">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Comentario" Width="2*" IsReadOnly="True"
                                            Binding="{Binding Path=Comentario}">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Datos de locación -->
            <GroupBox Grid.Row="4">
                <GroupBox.Header>
                    <TextBlock Style="{StaticResource groupTitle}">Dirección</TextBlock>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                        <TextBlock Margin="0,0,15,0"  Style="{StaticResource label}">Dirección:</TextBlock>
                        <TextBlock Name="lblAddress" TextWrapping="Wrap" />
                    </DockPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">Barrio:</TextBlock>
                        <TextBlock Name="lblNeighbour" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Ciudad:</TextBlock>
                        <TextBlock Name="lblCity" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2">
                        <Border />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Departamento:</TextBlock>
                        <TextBlock Name="lblDepartament" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">Teléfono:</TextBlock>
                        <TextBlock Name="lblTel" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                        <Border  />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Celular:</TextBlock>
                        <TextBlock Name="lblCel" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                        <Border  />
                        <TextBlock Margin="15,0" Style="{StaticResource label}">Teléfono alternativo:</TextBlock>
                        <TextBlock Name="lblTelAlt" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <TextBlock Margin="0,0,15,0" Style="{StaticResource label}">e-Mail:</TextBlock>
                        <TextBlock Name="lblMail" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
